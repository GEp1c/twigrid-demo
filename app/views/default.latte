{extends '../layout.latte'}

{block content}

	<div style="text-align: center;">
		<h2>Zvolte DataSource</h2>

		<ul class="inline">
			{var $buttons = [ success, warning ], $count = count($buttons)}
			<li n:foreach="$actions as $action => $name">
				<a n:href="$action" n:class="btn, btn-large, 'btn-' . $buttons[ ($iterator->counter - 1) % $count ]">{$name}</a>
			</li>
		</ul>
	</div>

{/block}
